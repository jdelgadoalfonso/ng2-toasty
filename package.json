{
  "name": "ng2-toasty",
  "description": "Angular2 Toasty component shows growl-style alerts and messages for your web app",
  "version": "0.0.0-semantically-released",
  "scripts": {
    "test": "karma start",
    "test-watch": "tsc && karma start --no-single-run --auto-watch",
    "commit": "npm run prepublish && npm test && git-cz",
    "prepublish": "tsc && npm run build",
    "build": "webpack && cp *.css bundles && cp -rf img bundles/img",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akserg/ng2-toasty.git"
  },
  "keywords": [
    "angular",
    "angular2",
    "toasty",
    "growl"
  ],
  "author": "Sergey Akopkokhyants",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akserg/ng2-toasty/issues"
  },
  "main": "bundles/index.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "homepage": "https://github.com/akserg/ng2-toasty",
  "dependencies": {
    "@angular/common": "4.4.4",
    "@angular/compiler": "4.4.4",
    "@angular/core": "4.4.4",
    "@angular/platform-browser": "4.4.4",
    "@angular/platform-browser-dynamic": "4.4.4",
    "@angular/platform-server": "4.4.4",
    "core-js": "2.5.1",
    "reflect-metadata": "0.1.10",
    "rxjs": "5.4.3",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@types/hammerjs": "2.0.35",
    "@types/jasmine": "2.6.0",
    "@types/node": "8.0.33",
    "awesome-typescript-loader": "3.2.3",
    "codelyzer": "3.2.1",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "istanbul-instrumenter-loader": "3.0.0",
    "jasmine-core": "2.8.0",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-firefox-launcher": "1.0.1",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.1.0",
    "karma-mocha-reporter": "2.2.4",
    "karma-remap-coverage": "0.1.4",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "2.0.5",
    "loader-utils": "1.1.0",
    "semantic-release": "8.0.3",
    "source-map-loader": "0.2.2",
    "ts-helpers": "1.1.2",
    "tslint": "5.7.0",
    "tslint-loader": "3.5.3",
    "typescript": "2.5.3",
    "webpack": "3.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
